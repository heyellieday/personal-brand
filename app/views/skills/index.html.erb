<% content_for :header do %>
  <div class="intro-text">
      <span class="name">Skills<span>
      <p class="page-description">Here's what I know that helps me create wonderful things.</p>
  </div>
  <div class="col-lg-8 col-lg-offset-2 text-center">
      <!-- <a href="#portfolio" target="_self" class="btn btn-lg btn-outline">
          <i class="fa fa-email"></i> Work with me
      </a> -->
  </div>
<style>
   header:before{
  background: url('<%= asset_path('mission-background.jpg') %>') no-repeat center center fixed;
  -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;

}
</style>

<% end %>

 <section id="skills">
    <div>
        <div class="row grid-section">
        <% @skills.each do |skill| %>
            <a class="col-sm-6 skill grid-item">
                <div class="grid-heading">
                    <h3><%= skill.name %></h3>
                </div>
                <div class="grid-content">
                    <p><%= skill.description %></p>
                </div>
            </a>
          <% end %>
        </div>
    </div>
</section>