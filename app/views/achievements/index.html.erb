<% content_for :header do %>
  <div class="intro-text">
      <span class="name">Achievements<span>
      <p class="page-description">A collection of my notable successes, in no particular order. </p>
  </div>
<style>
   header:before{
  background: url('<%= asset_path('mission-background.jpg') %>') no-repeat center center fixed;
  -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;

}
</style>

<% end %>

 <section id="achievements">
    <div>
        <div class="row grid-section">
        <% @achievements.each do |achievement| %>
            <a target="_blank" class="col-sm-6 achievement grid-item">
                <div class="grid-heading">
                    <h3 class="no-text-transform"><%= achievement.name %></h3>
                </div>
                <div class="grid-content">
                    <p><%= achievement.date %> - <%= achievement.description %></p>
                </div>
            </a>
          <% end %>
        </div>
    </div>
</section>
