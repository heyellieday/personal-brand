 <section id="portfolio"  ng-controller="ModalprojectCtrl">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>What I do</h2>
                
                </div>
            </div>
            <div class="row">
            <% @projects.each do |project| %>
                <div class="col-sm-4 portfolio-item">
                    <a href="<%= project_path(project) %>" class="portfolio-link">
                        <div class="caption">
                            <div class="caption-content">
                                <h3><%= project.organization_name %></h3>
                                <h4><%= project.job_title %></h4>
                            </div>
                        </div>
                        <img src="<%= project.tile_image.url %>" class="img-responsive" alt="">
                    </a>
                </div>
            <% end %>
            </div>
        </div>
</section>