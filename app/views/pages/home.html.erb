<% content_for :header do %>
  <div class="col-lg-8 col-lg-offset-2 text-center">
      <div class="intro-text">
          <span class="name">Hey, I'm Ellie Day.</span>
          <p id="header-intro">I’m a freelance web developer who creates awesome apps that are a joy to use. I'm dedicated to improving the inclusivity and accessibility of tech to <em>all</em> women through education, collaboration, and code.</p>
      </div>
      <div class="col-lg-8 col-lg-offset-2 text-center">
          <a href="<%= organizations_path %>" target="_self" class="btn btn-lg btn-outline">
              <i class="fa fa-email"></i> See what I'm working on
          </a>
      </div>
  </div>
  <style>
  	header {
		    text-align: center;
		    color: #fff;
		    background: url('<%= asset_path('background-heyellieday.jpg')%>') no-repeat center fixed;
		  -webkit-background-size: cover;
		  -moz-background-size: cover;
		  -o-background-size: cover;
		  background-size: cover;
		}
  </style>
<% end %>
 <!-- Work/Projects Section -->
 <%= render '/pages/home/what_im_doing' %>

