<% content_for :header do %>
  <div class="col-lg-8 col-lg-offset-2 text-center">
      <div class="intro-text">
          <span class="name">Hey, I'm Ellie Day.</span>
          <p id="header-intro">I’m making tech inclusive and accessible to <em>all</em> women through education, collaboration, and code.</p>
      </div>
      <div class="col-lg-8 col-lg-offset-2 text-center">
          <a href="#portfolio" target="_self" class="btn btn-lg btn-outline">
              <i class="fa fa-email"></i> See what I'm working on
          </a>
      </div>
  </div>
  <style>
  	header {
		    text-align: center;
		    color: #fff;
		    background: url('<%= image_url('background-heyellieday.jpg')%>') no-repeat center fixed;
		  -webkit-background-size: cover;
		  -moz-background-size: cover;
		  -o-background-size: cover;
		  background-size: cover;
		}
  </style>
<% end %>

 <!-- Portfolio Grid Section -->
 <%= render '/pages/home/projects' %>

<!-- About Section -->
<section class="success" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>My Mission</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 about">
            	<p></p>
                <p>I’m making tech inclusive and accessible to <em>all</em> women through education, collaboration, and code. By teaching and collaborating with under-served women and fostering honest conversations about diversity, I am dedicated towards creating a trans-inclusive tech community for women. </p>
            </div>
        </div>
    </div>
</section>
<section id="posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center posts-title">
                <h2>Latest Posts</h2>
            
            </div>
            <hr>
        </div>
        <div class="row container">
        <% @posts.each do |post| %>
            <div class="col-lg-8 col-lg-offset-2 post">
              <div class="caption">
                  <div class="caption-content">
                      <h3><%= post.title %></h3>
                  </div>
                  <p><%= post.subtitle %></p>
                  <h3><a target="_blank" href="<%= post.url %>">Read More</a></h3>
              </div>
            </div>
         <% end %>
        </div>
    </div>
</section>