<section id="posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center posts-title">
                <h2>Projects</h2>
            
            </div>
            <hr>
        </div>
        <div class="row container">
        <% @projects.each do |project| %>
            <div class="col-lg-3 post">
              <div class="caption">
                  <%= image_tag project.brand_image, width: "100%", height: "auto" %>
              </div>
            </div>
            <div class="col-lg-9 post">
              <div class="caption">
                  <div class="caption-content">
                      <h3><%= project.organization_name %></h3>
                      <h4><%= project.job_title %></h4>
                  </div>
                  <p><%= project.location %></p>
                  <h3><a href="<%= edit_manage_project_path(project.id) %>">Edit</a></h3>
              </div>
            </div>
         <% end %>
        </div>
    </div>
</section>